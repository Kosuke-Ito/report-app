<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger" style="width:24.4rem;">
      <%= pluralize(object.errors.count, "箇所入力ミスがあります") %>.
    </div>
    <% object.errors.full_messages.each do |msg| %>
      <p style="margin-top:1rem;margin-bottom:2rem;">・<%= msg %></p>
    <% end %>
  </div>
<% end %>
