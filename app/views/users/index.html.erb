<div class="container">
  <h1 style="display:inline-block;">マイページ</h1>
  <% if current_user.admin_flag == true %>
    <span class="admin_label">管理者</span>
  <% end %>
  <% if current_user.admin_flag == true %>
    <%= form_with url: users_search_path, method: :get, class: "user_search_form col-md-5 offset-md-2" do |f| %>
      <%= f.text_field :name, placeholder: "ユーザー検索", class: "user_search_field", maximum:10, pattern: "^[a-z]+$", title:"半角英数字で入力して下さい"  %>
      <%= f.submit "検索", class: "btn btn-primary", name: nil %>
      <span class="result"></span>
    <% end %>
  <% end %>
  <% if logged_in? %>
    <%= render 'users/logged_in' %>
  <% else %>
    <%= render 'users/not_logged_in' %>
  <% end %>
</div>
